# User Service - Gestion des utilisateurs et authentification (port 3000)
VITE_USER_SERVICE_URL=http://localhost:3000

# Search Service - Recherche et indexation (port 3001)
VITE_SEARCH_SERVICE_URL=http://localhost:3001

# Metric Service - Métriques et analytics (port 3002)
VITE_METRIC_SERVICE_URL=http://localhost:3002

# Conversation Service V1 - Historique et persistence (port 3003)
VITE_CONVERSATION_V1_SERVICE_URL=http://localhost:3003

# Conversation Service V3 - IA conversationnelle avec agents LangChain (port 3008)
VITE_CONVERSATION_SERVICE_URL=http://localhost:3008

# Sync Service - Synchronisation Bridge API (port 3004)
VITE_SYNC_SERVICE_URL=http://localhost:3004

# Enrichment Service - Enrichissement des transactions (port 3005)
VITE_ENRICHMENT_SERVICE_URL=http://localhost:3005

# Budget Profiling Service - Analyse budgétaire (port 3006)
VITE_BUDGET_PROFILING_API_URL=http://localhost:3006/api/v1/budget
